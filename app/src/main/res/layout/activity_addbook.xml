<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lib_back_blur">

            <LinearLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/add_book2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:padding="4dp"
                    android:text="Add Book"
                    android:textAlignment="center"
                    android:textColor="@color/light"
                    android:textSize="45dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/head"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/white"
                android:orientation="horizontal"></LinearLayout>

            <ScrollView
                android:id="@+id/bhaed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/head">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/booktitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/twhite"
                        android:drawableLeft="@drawable/title"
                        android:drawablePadding="10dp"
                        android:hint="Title"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/twhite"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/bookauthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/twhite"
                        android:drawableLeft="@drawable/author"
                        android:drawablePadding="10dp"
                        android:hint="Author"
                        android:inputType="textPostalAddress"
                        android:padding="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/twhite"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/bookISBN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/twhite"
                        android:drawableLeft="@drawable/isbn"
                        android:drawablePadding="10dp"
                        android:hint="ISBN No."
                        android:inputType="phone"
                        android:padding="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/twhite"
                        android:textSize="20sp" />

                    <AutoCompleteTextView
                        android:id="@+id/booksubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/twhite"
                        android:drawableLeft="@drawable/subject"
                        android:drawablePadding="10dp"
                        android:hint="Subject"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/twhite"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <AutoCompleteTextView
                                android:id="@+id/bookshelfnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/twhite"
                                android:drawableLeft="@drawable/shelf"
                                android:drawablePadding="10dp"
                                android:hint="Shelf Number"
                                android:inputType="text"
                                android:padding="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/twhite"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <AutoCompleteTextView
                                android:id="@+id/bookbranch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/twhite"
                                android:drawableLeft="@drawable/branch"
                                android:drawablePadding="10dp"
                                android:hint="Branch"
                                android:inputType="text"
                                android:padding="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/twhite"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/uploadimage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_weight="1"
                                android:background="@drawable/addphoto"
                                android:scaleType="centerCrop" />

                            <ImageButton
                                android:id="@+id/uploadpdf"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_weight="1"
                                android:background="@drawable/addphoto"
                                android:scaleType="centerCrop" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/addbook_button"
            android:text="Add" />

    </RelativeLayout>
</LinearLayout>