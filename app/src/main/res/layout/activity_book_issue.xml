<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_verify_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lib_back_blur"
    android:gravity="center"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="bottom|right|end">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="3dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="cursive"
                        android:text="Issue Book"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="40dp" />

                    <EditText
                        android:id="@+id/issuebarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/scan"
                        android:background="@drawable/edittext_verifystudent"
                        android:hint="QR Code"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/grey"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/scanissuebarcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/continue_button"
                            android:padding="16dp"
                            android:layout_marginRight="3dp"
                            android:text="SCAN CODE"
                            android:textColor="@color/white"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/issuethis"
                            android:layout_marginLeft="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/continue_button"
                            android:padding="16dp"
                            android:text="ISSUE BOOK"
                            android:textColor="@color/white"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
